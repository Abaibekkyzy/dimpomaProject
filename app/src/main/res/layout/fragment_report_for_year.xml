                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/playfairdisplay_medium"
                                    android:text="125000tg"
                                    android:textSize="15sp" />


                            </LinearLayout>

                        </LinearLayout>


